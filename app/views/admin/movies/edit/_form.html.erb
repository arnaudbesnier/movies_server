<%= semantic_form_for @movie, url: admin_movie_path(@movie), html: { multipart: true } do |f| %>
  <%= f.inputs "Story: #{@movie.alias}", style: 'height:270px; width:49%; margin-right:2%; float:left;' do %>
    <ol>
      <%= f.input :name %>
      <%= f.input :genre %>
      <%= f.input :synopsis, input_html: { style: 'height: 100px' } %>
    </ol>
  <% end %>

  <%= f.inputs 'Infos', style: 'height:270px; width:49%; float:left;' do %>
    <ol>
      <%= f.input :director %>
      <%= f.input :actors, input_html: { style: 'height: 30px' } %>
      <%= f.input :duration %>
      <%= f.input :release_date, as: :date_picker %>
      <%= f.input :reviewed %>
    </ol>
  <% end %>

  <%= f.inputs 'Poster', style: 'width:31%; margin-right:1%; float:left;' do %>
    <img src='<%= @movie.poster %>' style='margin-left:15px;' height=300>
    <%= f.input :poster, label: false %>
    <a style='margin-left: 15px;' href="http://www.allocine.fr/recherche/?q=<%= @movie.alias.gsub('_', '+') %>" target='_blank'>Search on Allocin√©</a>
  <% end %>

  <%= f.inputs 'Teaser', style: 'width:31%; margin-right:1%; float:left;' do %>
    <iframe width="400" height="300" src="http://www.youtube.com/embed/<%= @movie.url_teaser.gsub('http://www.youtube.com/watch?v=', '') %>" style='margin: 0 15px;'></iframe>
    <%= f.input :url_teaser, label: false %>
    <a style='margin-left: 15px;' href='http://www.youtube.com/results?search_query=<%= @movie.alias.gsub('_', ' ') %>' target='_blank'>Search on Youtube</a>
  <% end %>

  <%= f.inputs 'Playlist', style: 'width:31%; margin-right:2%; float:left;' do %>
  <iframe width="400" height="300" src="<%= @movie.url_playlist.gsub('http://www.youtube.com', 'http://www.youtube.com/embed') %>" style='margin: 0 15px;'></iframe>
    <%= f.input :url_playlist, label: false %>
    <a style='margin-left: 15px;' href='http://www.youtube.com/results?search_query=playlist <%= @movie.alias.gsub('_', ' ') %>' target='_blank'>Search on Youtube</a>
  <% end %>

  <%= f.actions do %>
    <%= f.submit 'Update' %>
    <%= link_to 'Cancel', admin_movies_path %>
  <% end %>

<% end %>
